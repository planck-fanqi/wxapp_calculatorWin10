.header{
    width: 100%; height: 6vh;
}
.inputs{
    width: 100vw; height: auto;
    display: flex; justify-content: center;
}
.input{
    width: 50vw; height: auto;
    display: flex; 
    justify-content: center; align-items: center;
    margin-top: 20rpx;
}
.input .input-blur{
    width: 40vw; height: 50rpx;
    padding: 10rpx 5rpx 5rpx 10rpx;
    margin-top: 10rpx; margin-bottom: 10rpx;
    line-height: 50rpx; font-size: large;
    border: 5rpx solid #999999;
    outline: none;
}
.input .input-focus{
    width: 40vw; height: 50rpx;
    padding: 10rpx 5rpx 5rpx 10rpx;
    margin-top: 10rpx; margin-bottom: 10rpx;
    line-height: 50rpx; font-size: large;
    border: 5rpx solid #4c4a48;
    outline: none;
}
input[disabled]{
    background: rgb(238, 238, 238);
}
