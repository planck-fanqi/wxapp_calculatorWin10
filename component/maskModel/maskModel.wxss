.maskContainer{
    width: 100vw; height: 100vh;
    position: absolute; z-index: 7;
    top: 0; left: 0;
}
.mask{
    width: 100vw; height: 100vh;
    background: #1e1e1e; opacity: .3;
    position: absolute; 
}
.maskContainer>.bar{
    width: 100vw; height: 35vw;
    background: #2a2525; opacity: 1;
    position: absolute; top: calc(50vh - 17.5vw); 
    display: flex; flex-direction: column;
}
.text{
    width: 90vw; height: 15vw;
    margin: 5vw;
    color: white; font-size: large;
    line-clamp: 3;
    text-overflow: ellipsis;
}
.buttonContainer{
    width: 93vw; height: 8vw;
    margin: 3.5vw;
    display: flex; justify-content: center; align-items: center;
    border: 1vw #ffffff;
}
.button{
    width: 20vw; height: 8vw;
    color: #ffffff;
    line-height: 8vw; text-align: center;
    border: 4px solid #ffffff;
}
.button-hover{
    background-color: #474343;
}